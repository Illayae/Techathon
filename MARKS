    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
           try{String a,u;
           
           int p,q,r,s,t;
        
              p=Integer.parseInt(TF1.getText());
                 q=Integer.parseInt(TF2.getText());
                    r=Integer.parseInt(TF3.getText());
                       s=Integer.parseInt(TF4.getText());
                          t=Integer.parseInt(TF5.getText());
                           u=TF6.getText();
          
             Class.forName("com.mysql.cj.jdbc.Driver");
          Connection  con=DriverManager.getConnection("jdbc:mysql://localhost:3306/acad?zeroDateTimeBehavior=CONVERT_TO_NULL","root","mysql");
            Statement st=con.createStatement();   
            a="insert into marks values('"+p+"','"+q+"','"+r+"','"+s+"','"+t+"','"+u+"');";
             
               st.executeUpdate(a);
              
                JOptionPane.showMessageDialog(this,"successfully added");
               
             
             
            
        }
        catch(Exception e){
             JOptionPane.showMessageDialog(this,"Invalid Input");
        }
    }                                        

